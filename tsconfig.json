{
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": ["src/*.ts", "env.d.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "strict": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "types": ["node"]
  }
}